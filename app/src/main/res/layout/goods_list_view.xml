<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_text_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:accessibilityHeading="false"
    android:gravity="center"
    android:background="@drawable/shape_sub_category"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="@dimen/activity_text_padding"
        android:paddingEnd="@dimen/activity_text_padding"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/text_mall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintStart_toEndOf="@id/text_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/text_lprice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/text_mall"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="@dimen/activity_text_padding"
        android:paddingEnd="@dimen/activity_text_padding"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/text_hprice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/text_lprice"
        app:layout_constraintTop_toTopOf="@id/text_id"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/activity_text_padding"
        android:text="@string/textview" />
    <TextView
        android:id="@+id/text_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_id"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintWidth_percent="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>