<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_text_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:accessibilityHeading="true"
    android:gravity="center"
    android:background="@drawable/shape_sub_category"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_goods"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/label_goods_name"
        android:paddingStart="@dimen/activity_text_padding"
        android:paddingTop="@dimen/activity_text_padding"
        android:paddingEnd="@dimen/activity_text_padding"
        android:paddingBottom="@dimen/activity_text_padding"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintHorizontal_weight="04"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_title"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_info"
        app:layout_constraintStart_toEndOf="@id/image_goods"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="@dimen/activity_text_padding"
        android:paddingEnd="@dimen/activity_text_padding"
        android:text="@string/textview" />
    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toTopOf="@id/text_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_goods"
        app:layout_constraintEnd_toEndOf="parent" >
        <TextView
            android:id="@+id/text_lprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_text_padding"
            android:paddingEnd="@dimen/activity_text_padding"
            android:text="@string/textview" />
        <TextView
            android:id="@+id/text_seperate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_text_padding"
            android:paddingEnd="@dimen/activity_text_padding"
            android:text="@string/label_split" />
        <TextView
            android:id="@+id/text_hprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_text_padding"
            android:paddingEnd="@dimen/activity_text_padding"
            android:text="@string/textview" />
        <TextView
            android:id="@+id/text_good_id"
            android:layout_width="0dp"
            android:layout_weight="0"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/text_id"
            android:layout_width="0dp"
            android:layout_weight="0"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/text_image_url"
            android:layout_width="0dp"
            android:layout_weight="0"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/text_mall"
            android:layout_width="0dp"
            android:layout_weight="0"
            android:layout_height="0dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>