<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_text_layout"
    android:background="@drawable/shape_sub_category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:accessibilityHeading="false"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_good"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/label_my_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_centerVertical="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_good"
        android:paddingStart="@dimen/activity_text_padding"
        android:paddingEnd="@dimen/activity_text_padding"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/text_mall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        android:layout_weight="1"
        android:text="@string/label_mall"/>

    <TextView
        android:id="@+id/text_lprice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_mall"
        android:paddingStart="@dimen/activity_text_padding"
        android:paddingEnd="@dimen/activity_text_padding"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/text_split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_lprice"
        app:layout_constraintTop_toBottomOf="@id/text_mall"
        android:paddingStart="@dimen/activity_text_padding"
        android:paddingEnd="@dimen/activity_text_padding"
        android:text="@string/string_split_1" />

    <TextView
        android:id="@+id/text_hprice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_split"
        app:layout_constraintTop_toBottomOf="@id/text_mall"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/activity_text_padding"
        android:text="@string/textview" />

</androidx.constraintlayout.widget.ConstraintLayout>